<h1>MY TODO APP</h1>

<ul>
{{#each items}}
<li>{{this.username}}</li> <span class='completed'><a href="/api/v1/items/delete/{{this.id}}">X</a></span>
<p>{{this.email}}</p>

{{/each}}
</ul>
<h3> Create a todo item </h3>
<section>
  <form class='add-item' action='/api/v1/items' method='post'>
    <div>
      <label for='user-name'> What is your username? </label>
      <input type='text' name='username' value=''></input>
    </div>
    <div>
      <label for='item-description'>Email </label>
      <textarea name='email' rows='8' cols= '40'></textarea>
    </div>
    <div>
      <input type='submit'>
    </div>
  </form>
</section>
